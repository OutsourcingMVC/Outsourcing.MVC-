    <script type="text/javascript">

        window.onload = function () {
            var oImg = document.getElementById('imgs');
            var oNum = document.getElementById('num');
            var oLi = oNum.getElementsByTagName('li');
            var now = 0;
            var oBox = document.getElementById('imgs');
            var aBtn = document.getElementById('num').getElementsByTagName('li');
            var aLi = oBox.getElementsByTagName('ol')[0].children;
            var n = 0;
            for (var i = 0; i < aBtn.length; i++) {
                (function (index) {

                    aBtn[i].pthdboxonmouseover = function () {
                        n = index;
                        for (var i = 0; i < aBtn.length; i++) {
                            aBtn[i].className = '';
                            aLi[i].className = '';
                        }
                        this.className = 'active_btn';
                        aLi[index].className = 'show_list';
                    };
                })(i);
            }
            var timer = setInterval(function () {
                n++;
                if (n == aBtn.length) {
                    n = 0;
                }
                for (var i = 0; i < aBtn.length; i++) {
                    aBtn[i].className = '';
                    aLi[i].className = '';
                }
                aBtn[n].className = 'active_btn';
                aLi[n].className = 'show_list';
            }, 1500);

            oBox.onmouseover = function () {
                clearInterval(timer);
            }

            oBox.onmouseout = function () {
                timer = setInterval(function () {
                    n++;
                    if (n == aBtn.length) {
                        n = 0;
                    }
                    for (var i = 0; i < aBtn.length; i++) {
                        aBtn[i].className = '';
                        aLi[i].className = '';
                    }
                    aBtn[n].className = 'active_btn';
                    aLi[n].className = 'show_list';
                }, 1500);
            }
        }

