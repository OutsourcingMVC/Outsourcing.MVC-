                    $("#errorbox span").attr("id", "span-password").html("密码错误");
                    return false;
                }
                if (msg == "登录成功") {
                    $("#submit_button span.bold").html("登录中...");
                    window.location.href = '/Home/Index?loginid=' + loginid;
                }
            }
        });
