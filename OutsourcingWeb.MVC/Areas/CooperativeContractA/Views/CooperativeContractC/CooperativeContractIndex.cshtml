<input type="hidden" name="loginid" id="loginid" value="@ViewBag.LoginID">
<input type="hidden" name="types" id="types" value="@ViewBag.Type">

<div id="rightId">
    <div class="panel-body" id="topDiv">
        <div class="list-op" id="leftPage">
        </div>
        <form class="form-horizontal">
            <legend>
                <span style="font-size: 13px;">
                    <strong> 查询设置</strong>
                </span>
            </legend>
            <div class="form-group">
                <label class="col-sm-1 control-label" style="width: auto;"  for="ds_host">合同编号：</label>
                <div class="col-sm-2">
                    <input class="form-control" id="ContractCodeQuery" style="width: 150px;" type="text" placeholder="请输入合同编号">
                </div>
                <label class="col-sm-1 control-label" for="ds_name" style="min-width:112px;">开始月份:</label>
                <div class="col-sm-2">
                    <input class="form-control" id="DatepickerStart" style="width: 150px;" type="text" placeholder="">
                </div>
                <label class="col-sm-1 control-label" style="min-width: 112px;" for="ds_username">结束月份：</label>
                <div class="col-sm-2">
                    <input class="form-control" id="DatepickerEnd" style="width: 150px;" type="text" placeholder="">
                </div>
                <div class="col-sm-1">
                    <button id="QuerySettlement" type="button" onclick="submitQuerySettement()"   class="btn btn-default btn-sm btn-info">查询</button>
                </div>
            </div>
        </form>
    </div>
    <div id="datalist">
        @*@Html.Partial("CooperativeContract_Partial", Model)*@
        <table class="table table-bordered table-striped table-hover table-heading table-datatable" style="width: 100%;">
            <thead id="theadId">
                <tr>
                    <th>编号</th>
                    <th>甲方公司</th>
                    <th>乙方公司</th>
                    <th>甲方状态</th>
                    <th>乙方状态</th>
                    <th>合同状态</th>
                    <th>生效时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @{if (Model != null && Model.ViewList != null && Model.ViewList.Count > 0)
                    {
                        foreach (var item in Model.ViewList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContractCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerCompnay.CompnayName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OutsourcingCompany.CompnayName)
                                </td>
                                <td>
                                @if (item.FirstPartyStatus == 1)
                                {
                                    <span class="btn-danger">审阅中</span>                           
                                }
                                else
                                {                                    
                                    <span class="btn-success">同意</span>                                    
                                }
                                </td>
                                <td>
                                    @if (item.SecondPartyStatus == 1)
                                    {                                    
                                        <span class="btn-danger">审阅中</span>                                    
                                    }
                                    else
                                    {                                        
                                        <span class="btn-success">同意</span>                                        
                                    }
                                </td>
                                <td>
                                    @if (item.ContractStatus == 0)
                                    {                                    
                                        <span class="btn-danger">未生效</span>                                    
                                    }
                                    else
                                    {                                        
                                        <span class="btn-success">生效</span>                                        
                                    }
                                </td>
                                <td>
                                    @{
                                        string CurrentDate = string.Format("{0:yyyy-MM-dd}", item.EffectiveTime);
                                    }
                                    @CurrentDate

                                </td>
                                <td>
                                    @if (item.FirstPartyStatus == 0 && item.SecondPartyStatus == 0)
                                    {
                                        string str = ViewBag.Type;
                                        switch (str)
                                        {
                                            case "1":
                                                if (item.FirstOrSecondDownload == 0)
                                                {
                                                    if (!string.IsNullOrEmpty(item.ContactFileFul))
                                                    {
                                                        <a href="/CooperativeContractA/CooperativeContractC/DownFile?ID=@HttpUtility.UrlEncode(item.ID)" class="btn btn-primary btn-xs">下载</a>

                                                    }
                                                    else
                                                    {
                                                        <a href="#" onclick="NoDown()" class="btn btn-primary btn-xs">下载</a>
                                                    }
                                                }
                                                else
                                                {
                                                    <button title="下载合同模板" onclick="ShowWordContent('@item.ID')" type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#WordModal">
                                                        下载
                                                    </button>
                                                }
                                                break;
                                            case "2":
                                                if (item.FirstOrSecondDownload == 0)
                                                {
                                                    <button title="下载合同模板" onclick="ShowWordContent('@item.ID')" type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#WordModal">
                                                        下载
                                                    </button>
                                                }
                                                else
                                                {
                                                    if (!string.IsNullOrEmpty(item.ContactFileFul))
                                                    {
                                                        <a href="/CooperativeContractA/CooperativeContractC/DownFile?ID=@HttpUtility.UrlEncode(item.ID)" class="btn btn-primary btn-xs">下载</a>

                                                    }
                                                    else
                                                    {
                                                        <a href="#" onclick="NoDown()" class="btn btn-primary btn-xs">下载</a>
                                                    }
                                                }
                                                break;
                                        }
                                        if (item.ContractStatus == 0)
                                        {
                                            <button title="上传盖章合同" onclick="upLoadFile('@item.ID','@item.ContractCode')" type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#UploadModal">
                                                上传
                                            </button>
                                            <button title="合同生效" onclick="Effective('@item.ID')" type="button" class="btn btn-primary btn-xs">
                                                生效
                                            </button>
                                        }
                                        else
                                        {
                                            <a title="人员派遣合同"  href="/EmployeeExpatriationA/EmployeeExpatriationC/EmployeeExpatriationIndex?loginid=@ViewBag.LoginID&&type=@ViewBag.Type&&oldPage=@currentPage&&FirstID=@item.ContractFirstParty&&SecondID=@item.ContractSecondParty" class="btn btn-primary btn-xs">
                                                人员派遣
                                            </a>
                                        }
                                    }
                                    else
                                    {
                                        <button title="同意合同" type="button" onclick="AgreenContract('@item.ID');" class="btn btn-primary btn-xs">
                                            同意
                                        </button>
                                        <button title="审阅合同" type="button" onclick="ShowReviewDetail('@item.ID');" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#myModal">
                                            审阅
                                        </button>
                                    }
                                </td>
                            </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr><td colspan="8" style="text-align:center;">未查询到任何记录</td></tr>
                                        }
                }
            </tbody>
        </table>
        <br />
        <div>
        @if (Model != null && Model.ViewList != null)
        {
            currentPage = Model.ViewList.PageNumber;
            <div id="pagerlist" style="float:left;width:50%">
                共 @Model.ViewList.PageCount 页 @Model.ViewList.TotalItemCount 条记录，当前为第 @Model.ViewList.PageNumber 页
            </div>
            @*PagedList分页，不带ajax支持*@
            @Html.PagedListPager((IPagedList)Model.ViewList, page => Url.Action("CooperativeContractIndex", new { page, loginid = ViewBag.LoginID }))

         }
        </div>
    </div>
</div>
