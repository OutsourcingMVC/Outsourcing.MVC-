            resetForm: true,          //成功提交后，重置所有表单元素的值
            timeout: 3000 ,              //限制请求的时间，当请求大于3秒后，跳出请求
            success: function(responseText, statusText){//提交后的回调函数
                //debugger;
                swal("上传提示","上传成功","success");
                $("#UploadModalclose").click();
            }
        });
        return false;   //阻止表单默认提交

    })

    //设置上传文件标识
    function upLoadFile(id,code)
    {
        $("#IDf").val(id);
        $("#ContractNum").val(code);
    }

    //将模板合同保存为word
    debugger;
    $("#SaveToWord").click(function(){
        $("#wordImport").wordExport();
        var datas={
            type:@ViewBag.Type,
            ID:$("#wordID").val()};
        $.ajax({
            url:"/CooperativeContractA/CooperativeContractC/UpdateDownByFirstOrSecond",
            type: "Post",
            data:datas,
            dataType: "text",
            success: function (data)
            {
                $("#WordModalclose").click();
                //swal("下载提示","下载成功","success");
            } });
    })


    //审阅合同内容
    function ViewContract()
    {
        $("#Modalclose").click();
        //debugger;
        var s=UE.getEditor('JobDescription1').getContent();
        var datas={
            loginid:@ViewBag.LoginID,
            ID:$("#IDv").val(),
            ReviewContent:encodeURIComponent(UE.getEditor('JobDescription1').getContent())
        };
        $.ajax({
            url:"/CooperativeContractA/CooperativeContractC/UpdateContractReview",
            type: "Post",
            data:datas,
            dataType: "text",
            success: function (data)
            {
                swal("审阅提示","审阅成功","success");
            }
        });
    }

    //查询验证参数并提交
    function submitQuerySettement()
    {
        debugger;
        

        //验证数据
        var ds=$('#DatepickerStart').val();
        var de = $('#DatepickerEnd').val();
       
        if (ds=="")
        {
            swal("参数提示!","开始月份不能为空","error");
            return false;
        }
        if(de=="")
        {
            swal("参数提示!","结束月份不能为空","error");
            return false;
        }
        if(ds!="" && de!="")
        {
            if (ds > de)
            {
                swal("参数提示!", "开始月份不能大于结束月份", "error");
                return false;
            }
        }
       
        var url="/CooperativeContractA/CooperativeContractC/CooperativeContractIndex?";
        url+="loginid=@ViewBag.LoginID&&type=@ViewBag.Type&&startD=" + ds + '&&endD=' + de;
        url+="&&ContractCode="+ContractCode;
        location.href = url;
    }


    //查看合同
    function ShowReviewDetail(id) {
        $("#Modalclose").click();
        debugger;
        $("#IDv").val(id);
        var datas={
            loginid:@ViewBag.LoginID,
            type:@ViewBag.Type,
            ID:id};
        $.ajax({
            url:"/CooperativeContractA/CooperativeContractC/GetContract",
            type: "Post",
            data:datas,
            dataType: "text",
            success: function (datas)
            {
                //debugger;
                var data= $.parseJSON(datas);
                if (datas=="")
                {
                    UE.getEditor('detail').setContent("<p>无合同内容</p>");
                    //$('#detail').html("无合同内容");
                }
                else
                {
                    UE.getEditor('detail').setContent(data.ContractContent);
                    UE.getEditor('JobDescription1').setContent(data.ReviewContent);
                    //$('#detail').html(datas);
                }
                //$("#Modalclose").click();
            }
        });
    }

    //显示合同和备注
    function ShowWordContent(id) {
        $("#WordModalclose").click();
        //debugger;
        $("#wordID").val(id);
        var datas={
            loginid:@ViewBag.LoginID,
            type:@ViewBag.Type,
            ID:id};
        $.ajax({
            url:"/CooperativeContractA/CooperativeContractC/GetContract",
            type: "Post",
            data:datas,
            dataType: "text",
            success: function (datas)
            {
                //debugger;
                var data= $.parseJSON(datas);
                if (datas=="")
                {
                    UE.getEditor('wordImport').setContent("<p>无合同内容</p>");
                    //$('#detail').html("无合同内容");
                }
                else
                {
                    var str=data.ContractContent+data.ReviewContent;
                    $("#wordImport").html(str);
                }
            }
        });
    }

    //同意合同
    function AgreenContract(id) {
        //debugger;
        var datas={
            loginid:@ViewBag.LoginID,
            type:@ViewBag.Type,
            ID:id,
            page:@currentPage };
        $.ajax({
            url:"/CooperativeContractA/CooperativeContractC/AgreenContract",
            type: "Post",
            data:datas,
            dataType: "text",
            success: function (datas)
            {
                swal("审阅提示","审阅成功","success");
            }
        });
    }

    //下载未上传盖章合同时
    function NoDown()
    {
        swal("下载提示","盖章合同暂未上传，请等待...","warning");
    }

    //合同生效
    function Effective(id)
    {
        var datas={
            loginid:@ViewBag.LoginID,
            type:@ViewBag.Type,
            ID:id,
            page:@currentPage};
        $.ajax({
            url:"/CooperativeContractA/CooperativeContractC/EffectiveStatusUpdate",
            type: "Post",
            data:datas,
            dataType: "text",
            success: function (txt)
            {
                debugger;
                location.href ="/CooperativeContractA/CooperativeContractC/CooperativeContractIndex"+txt;
                //swal("审阅提示","审阅成功","success");
            }
