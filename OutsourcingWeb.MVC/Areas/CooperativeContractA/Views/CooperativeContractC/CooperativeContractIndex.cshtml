<script type="text/javascript" charset="utf-8" src="~/ueditor/lang/zh-cn/zh-cn.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        //开始时间表
        $('#DatepickerStart').datetimepicker({
            //language: 'zh-CN',  //日期
            startView: 3,
            minView:3,
            format: 'yyyy-mm',
            autoclose: 1
        });
        //到期时间表
        $('#DatepickerEnd').datetimepicker({
            //language: 'zh-CN',  //日期
            startView: 3,
            minView: 3,
            format: 'yyyy-mm',
            autoclose: 1
        });

        $('#usertype').multipleSelect(); //多选初始化

        var detail = UE.getEditor('detail',{
            //这里可以选择自己需要的工具按钮名称
            toolbars:[['']],
            //关闭字数统计
            wordCount:false,
            //默认的编辑区域高度
            initialFrameHeight:470,
            scaleEnabled:true});

        var jobDescription = UE.getEditor('JobDescription1' ,{
            //这里可以选择自己需要的工具按钮名称
            toolbars:[['']],
            //关闭字数统计
            wordCount:false,
            //默认的编辑区域高度
            initialFrameHeight:470,
            scaleEnabled:true});

        var wordImport = UE.getEditor('wordImport' ,{
            //这里可以选择自己需要的工具按钮名称
            toolbars:[['']],
            //关闭字数统计
            wordCount:false,
            //默认的编辑区域高度
            initialFrameHeight:470,
            scaleEnabled:true});
    })

    //function showRequest(formData, jqForm, options){
    //    //formData: 数组对象，提交表单时，Form插件会以Ajax方式自动提交这些数据，
    //    //格式如：[{name:user,value:val },{name:pwd,value:pwd}]
    //    //jqForm:   jQuery对象，封装了表单的元素
    //    //options:  options对象
    //    debugger;
    //    var queryString = $.param(formData);   //name=1&address=2
    //    var formElement = jqForm[0];              //将jqForm转换为DOM对象
    //    //var address = formElement.ID.value;  //访问jqForm的DOM元素
    //    return true;  //只要不返回false，表单都会提交,在这里可以对表单元素进行验证
    //};

    //提交上传文件表单
    $("#fileUpload").click(function(){
        //debugger;
        $("#upFile").ajaxSubmit({
            //target: '#output',          //把服务器返回的内容放入id为output的元素中
            //beforeSubmit: showRequest,  //提交前的回调函数
            //url: url,                 //默认是form的action， 如果申明，则会覆盖
            //type: type,               //默认是form的method（get or post），如果申明，则会覆盖
            dataType: "json",           //html(默认), xml, script, json...接受服务端返回的类型
