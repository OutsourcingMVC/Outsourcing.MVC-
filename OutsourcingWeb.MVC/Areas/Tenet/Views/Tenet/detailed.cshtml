        .detailed_left h2{background:#f5f5f5; height:40px;line-height:40px; padding-left:10px;}
         .detailed_left ul li{ padding-left:10px; height:30px; line-height:30px;}
         .detailed_left p span{display:inline-block;margin-right:10px; font-size:14px;color:red;font-weight:bold;}
