@model Outsourcing.MVC.Areas.TalentPush.Models.PushInverviewViewModel
@{
   // ViewBag.Title = "Details";
}
<style>
    .td {
    }
</style>

<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <a href="#" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <ol class="breadcrumb pull-left">
            <li><a onclick="LoadAjaxContent('TalentPush/TalentPush/Index?page=@ViewBag.pageIndex&JobName=@ViewBag.JobName&pid=@ViewBag.pid')" href="#">返回列表页</a></li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-linux"></i>
                    <span>查看详细</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding"  style="width:100%;">
                <form id="defaultForm" method="post"  class="form-horizontal">
                    <fieldset>
                        @{
                            if (Model != null)
                            {
                                <div class="col-sm-4 control-label" style="background-color:#ffffff; width:100%;">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <table class="table table-bordered table-striped table-hover table-heading table-datatable" style="width: 100%;">
                                                <thead>
                                                    <tr class="caption">
                                                        <td style="width:20%;">
                                                            <h4>客户公司</h4>
                                                        </td>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td style="width:15%;"><label class="control-label" style="color:#ff0000">项目名称:</label></td>
                                                        <td style="text-align:left;">
                                                            @Model.Requirement.ProjectName
                                                            @Html.Hidden("RequirementId", Model.Requirement.RequirementId)

                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:8%;">
                                                            <label class="control-label" style="color:#ff0000;">职位名称:</label>
                                                        </td>
                                                        <td style="text-align:left;">
                                                            @Model.Requirement.JobName
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:8%;">
                                                            <label class="control-label" style="color:#ff0000;">招聘人数:</label>
                                                        </td>
                                                        <td style="text-align:left;">
                                                            @Model.Requirement.RecNumber
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:8%;"><label class="control-label">项目介绍:</label></td>
                                                        <td style="text-align:left;"><p>@Model.Requirement.Remark</p></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:8%;"><label class="control-label">工作描述:</label></td>
                                                        <td style="text-align:left;">                                                            
                                                            @(new HtmlString(Model.Requirement.JobDescription))
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:8%;"><label class="control-label">项目地址:</label></td>
                                                        <td style="text-align:left;">
                                                            @Model.Requirement.ProjectAddress
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        @*<hr />*@
                                        <div class="col-lg-6">
                                            <table class="table table-bordered table-striped table-hover table-heading table-datatable" style="width: 100%;">
                                                <thead>
                                                    <tr class="caption">
                                                        <td style="width:20%;">
                                                            <h4>人员信息</h4>
                                                        </td>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td style="width:12%;"><label class="control-label" style="color:#ff0000">姓名:</label></td>
                                                        <td style="text-align:left;">
                                                            @Model.Personal.PersonName
                                                            @Html.Hidden("RequirementId", Model.Requirement.RequirementId)

                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:8%;">
                                                            <label class="control-label" style="color:#ff0000;">学历:</label>
                                                        </td>
                                                        <td style="text-align:left;">
                                                            @Model.Personal.Education
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width:8%;">
                                                            <label class="control-label" style="color:#ff0000;">技能:</label>
                                                        </td>
                                                        <td style="text-align:left;">
                                                            @Model.Personal.Publications
                                                        </td>
                                                    </tr>
                                                    @*<tr>
                            <td style="width:8%;"><label class="control-label">项目介绍:</label></td>
                            <td style="text-align:left;"><p>@Model.Requirement.Remark</p></td>
                        </tr>
                        <tr>
                            <td style="width:8%;"><label class="control-label">工作描述:</label></td>
                            <td style="text-align:left;"><p>@Model.Requirement.JobDescription</p></td>
                        </tr>
                        <tr>
                            <td style="width:8%;"><label class="control-label">项目地址:</label></td>
                            <td style="text-align:left;">
                                @Model.Requirement.ProjectAddress
                            </td>
                        </tr>*@
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            }
                            }
                   </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        // Add Drag-n-Drop feature
        WinMove();
    });
</script>

