@model Outsourcing.MVC.Areas.Requirement.Models.RequirementModel
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <a href="#" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <ol class="breadcrumb pull-left">
            <li><a onclick="LoadAjaxContent('Requirement/Requirement/Index?page=@ViewBag.pageIndex&ProjectName=@HttpUtility.UrlEncodeUnicode(ViewBag.SearchString)')" href="#">返回列表页</a></li>
            @*<li><a href="#">Tables</a></li>
                <li><a href="#">Data Tables</a></li>*@
        </ol>
        @*<div id="social" class="pull-right">
                <a href="#"><i class="fa fa-google-plus"></i></a>
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-linkedin"></i></a>
                <a href="#"><i class="fa fa-youtube"></i></a>
            </div>*@
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-linux"></i>
                    <span>查看需求</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">
                <form id="defaultForm" method="post" class="form-horizontal">
                    <fieldset>
                @{ if (Model.Requirement != null)
                    {
                         <div class="col-sm-4 control-label" style="background-color:#ffffff; width:100%;">
                            <div class="row">
                                <table class="table table-bordered table-striped table-hover table-heading table-datatable" style="width: 100%;">
                                    <tbody>
                                        <tr>
                                            <td style="width:15%;"><label class="control-label" style="color:#ff0000">项目名称:</label></td>
                                            <td style="text-align:left;">
                                                @Model.Requirement.ProjectName
                                                @Html.Hidden("RequirementId", Model.Requirement.RequirementId)

                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:8%;">
                                                <label class="control-label" style="color:#ff0000;">职位名称:</label>
                                            </td>
                                            <td style="text-align:left;">
                                                @Model.Requirement.JobName
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:8%;">
                                                <label class="control-label" style="color:#ff0000;">招聘人数:</label>
                                            </td>
                                            <td style="text-align:left;">
                                                @Model.Requirement.RecNumber
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:8%;">
                                                <label class="control-label" style="color:#ff0000;">到岗时间:</label>
                                            </td>
                                            <td style="text-align:left;">
                                                @{ 
                                                    string arrivaltime = String.Format("{0:yyyy-MM-dd}", Model.Requirement.ArrivalTime);
                                                }

                                                @arrivaltime

                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:8%;"><label class="control-label">所属公司:</label></td>
                                            <td style="text-align:left;"><p>@Model.CustomerCompnay.CompnayName</p></td>
                                        </tr>
                                        <tr>
                                            <td style="width:8%;"><label class="control-label">工作描述:</label></td>
                                            <td style="text-align:left;">
                                                @(new HtmlString(Model.Requirement.JobDescription))
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:8%;"><label class="control-label">项目地址:</label></td>
                                            <td style="text-align:left;">
                                                @Model.Requirement.ProjectAddress
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                         </div>
                    }
                 }
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        // Add Drag-n-Drop feature
        WinMove();
    });
</script>

