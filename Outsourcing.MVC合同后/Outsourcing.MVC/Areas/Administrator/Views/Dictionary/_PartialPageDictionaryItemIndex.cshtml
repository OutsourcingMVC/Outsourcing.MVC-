@using PagedList
@using PagedList.Mvc
@using System.Text;
@model PagedList<Outsourcing.EF.DictionaryItem>

<table class="table table-bordered table-striped table-hover table-heading table-datatable" style="width: 100%;">
    <thead>
        <tr>
            @*<th>
                    @Html.ActionLink("RoleName", "Index", new { sortOrder = ViewBag.RoleNameParm, currentFilter = ViewBag.CurrentFilter })
                </th>*@
            <th>子项名称</th>
            <th>创建人</th>
            <th>创建时间</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @{if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.HiddenFor(modelItem => item.DictionaryItemID)
                            @Html.DisplayFor(modelItem => item.ItemName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateUser)
                        </td>
                        <td>
                            @{
                                string date = item.CreateTime.Value.ToString();
                            }

                            @Html.DisplayFor(modelItem => date)
                        </td>

                        <td>
                            <a id="btnEdit" onclick="LoadAjaxContent('Administrator/Dictionary/DictionaryItemEdit/@item.DictionaryItemID?pageIndex=@Model.PageNumber&SearchString=@HttpUtility.UrlEncodeUnicode(ViewBag.CurrentFilter)&&DictionaryID=@item.DictionaryID')" href="#">编辑</a>|
                            <a id="btnDelete" onclick="del(this,@item.DictionaryItemID);" href="#">删除</a>
                        </td>
                    </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="3" style="text-align:center;">未查询到任何记录</td></tr>
                                }
        }
    </tbody>
</table>
<br />
<div>

    @*<script src="~/Scripts/mvcpager.js"></script>*@
    <div id="pagerlist" style="float:left;width:50%">
        共 @Model.PageCount 页 @Model.TotalItemCount 条记录，当前为第 @Model.PageNumber 页
    </div>
    @*PagedList分页，不带ajax支持*@
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, DictionaryItemName = (ViewBag.CurrentFilter != null ? ViewBag.CurrentFilter : string.Empty) }))
    @*mvcpager分页，带ajax支持*@
