@model Outsourcing.EF.Attachment
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <a href="#" class="show-sidebar">
            <i class="fa fa-bars"></i>
        </a>
        <ol class="breadcrumb pull-left">
            <li><a onclick="LoadAjaxContent('Attachment/Attachments/Index?page=@ViewBag.pageIndex&AttachmentName=@HttpUtility.UrlEncodeUnicode(ViewBag.SearchString)')" href="#">返回列表页</a></li>
            @*<li><a href="#">Tables</a></li>
                <li><a href="#">Data Tables</a></li>*@
        </ol>
        @*<div id="social" class="pull-right">
            <a href="#"><i class="fa fa-google-plus"></i></a>
            <a href="#"><i class="fa fa-facebook"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-youtube"></i></a>
        </div>*@
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-linux"></i>
                    <span>查看附件</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">
                <form id="defaultForm" method="post" action="OA/Menu/Details" class="form-horizontal">
                    <fieldset>
                        @{
                            if (Model != null)
                            {
                                <div class="col-sm-4 control-label" style="background-color:#ffffff;">
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label" style="color:#ff0000">附件名称</label>
                                        <div class="col-sm-7">
                                            @Html.Hidden("attachmentid", @Model.AttachmentId)
                                            <label class="control-label">@Model.AttachmentName</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label" style="color:#ff0000">查看附件</label>
                                        <div class="col-sm-7">
                                            <a id="@Model.DocPath" href="@Model.DocPath" class="contactfile">浏览</a>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">描述</label>
                                        <div class="col-sm-7">
                                            <label class="control-label">@Model.Descriptions</label>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        // Add Drag-n-Drop feature
        WinMove();
    });
</script>

