    //查看合同    
    function ShowLeaveDetail(id) {
        $("#Modalclose").click();
        //debugger;
        var datas={
            loginid:@ViewBag.LoginID,
            types:@ViewBag.Type,
            ID:id};
        $.ajax({
            url:"/CooperativeContractA/CooperativeContractC/GetContract",
            type: "Post",
            data:datas,
            dataType: "text",
            success: function (datas)
            { 
                //debugger;
                if (datas=="")
                {                   
                    $('#detail').html("无合同内容");   
               
                }   
                else
                {
                    $('#detail').html(datas);       
                }
               
            }
        });
    }
    
