
@model List<Outsourcing.EF.Model.Recruit.RecruitModel>
@{
    ViewBag.Title = "招聘中心";
    Layout = "~/Views/Shared/_RecruitLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>我的简历</title>
    <script type="text/javascript" src="~/Scripts/calendar/js/lyz.calendar.min.js"></script>
    <link href="~/Scripts/calendar/css/lyz.calendar.css" rel="stylesheet" />
    <!--消息提示框-->
    <link rel="stylesheet" href="~/Scripts/sweetalert/sweetalert.css" />
    <script type="text/javascript" src="~/Scripts/sweetalert/sweetalert.min.js"></script>
    <!-- 编辑器样式 -->
    <script type="text/javascript" charset="utf-8" src="~/Scripts/ueditor/utf8-net/ueditor.config.js"></script>
    <script type="text/javascript" charset="utf-8" src="~/Scripts/ueditor/utf8-net/ueditor.all.min.js"> </script>
    <!--建议手动加在语言，避免在ie下有时因为加载语言失败导致编辑器加载失败-->
    <!--这里加载的语言文件会覆盖你在配置项目里添加的语言类型，比如你在配置项目里配置的是英文，这里加载的中文，那最后就是中文-->
    <script type="text/javascript" charset="utf-8" src="~/Scripts/ueditor/utf8-net/lang/zh-cn/zh-cn.js"></script>
    <link href="~/Scripts/styles/extends/ViewCss/recruitCenter.css" rel="stylesheet" />
</head>
<body>
    <input type="hidden" id="loginid" value="@ViewBag.LoginID" />
    <div style="margin-left:70px;margin-right:80px;margin-top:10px;">
        <div id="recruitHeader" style="height:40px;">
            <strong style="font-size:16px;margin-top:10px;">我的简历</strong>
            <button class="btn" type="button" style="width:90px;height:30px;float:right;">创建简历</button>
        </div>
        <div>
            <table id="tb_Main">
                <thead>
                    <tr>
                        <th style="width:15%;text-align:center">简历名称</th>
                        <th style="width:12%;text-align:center">简历公开程度</th>
                        <th style="width:12%;text-align:center">创建时间</th>
                        <th style="width:12%;text-align:center">更新时间</th>
                        <th style="width:12%;text-align:center">修改简历</th>
                        <th style="width:12%;text-align:center">刷新</th>
                        <th style="width:12%;text-align:center">屏蔽企业</th>
                        <th style="width:12%;text-align:center">删除</th>
                    </tr>
                </thead>
                <tbody>
                    <tr style="height:10px;"></tr>
                    @{ 
                        if (Model.Count() > 0 && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.RecruitName</td>
                                    <td>@item.Private</td>
                                    <td>@item.CreteTime</td>
                                    <td>@item.UpdateTime</td>
                                    <td>修改简历</td>
                                    <td>刷新</td>
                                    <td>屏蔽企业</td>
                                    <td>删除</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td style="text-align:center;" colspan="8">
                                    <div>抱歉，您并没有创建简历</div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        @{ 
            if (!Model.Any()&&Model.Count<1)
            {
                <table style="margin-top:10px;">
                    <tr>
                        <td></td>
                    </tr>
                </table>
            }
        }
    </div>
</body>
</html>

<script type="text/javascript">
    $(".btn").click(function () {
        window.location.href = "/Recruit/Recruit/CreateRecruit?loginId=@ViewBag.LoginID&id="+''+"";
    })
</script>
